<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/FFFAFAFA"
    tools:context=".view.actvity.LoginActivity">
    <RelativeLayout
        android:background="@mipmap/ic_login_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_334">
        <ImageView
            android:id="@+id/login_img_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_53"
            android:src="@mipmap/ic_head"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_133"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textColor="@color/fffefefe"
            android:textSize="@dimen/sp_30"
            />
    </RelativeLayout>
     <LinearLayout
      android:layout_marginRight="@dimen/dp_15"
      android:layout_marginLeft="@dimen/dp_15"
      android:layout_marginTop="@dimen/dp_212"
      android:background="@drawable/bg_white_8"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_234"
      android:orientation="vertical">
      <TextView
          android:layout_marginRight="@dimen/dp_20"
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="手机号码"
          android:textColor="@color/ff4e4d4d"
          android:textSize="@dimen/sp_14"
          />

      <EditText
          android:id="@+id/login_edt_mobile"
          android:background="@null"
          android:layout_marginRight="@dimen/dp_20"
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_marginTop="@dimen/dp_10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="请输入手机号码"
          android:textColor="@color/ffa5a5a5"
          android:textSize="15sp"
          />

      <View
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_marginRight="@dimen/dp_20"
          android:layout_marginTop="@dimen/dp_10"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_1"
          android:background="#ffd6d6d6"/>

      <TextView
          android:background="@null"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_marginRight="@dimen/dp_20"
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="密码"
          android:textColor="@color/ff4e4d4d"
          android:textSize="@dimen/sp_14"
          />

      <RelativeLayout
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_marginRight="@dimen/dp_20"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_40">
          <EditText
              android:id="@+id/login_edt_password"
              android:inputType="textPassword"
              android:background="@null"
              android:layout_toLeftOf="@+id/login_tv_no_password"
              android:layout_centerVertical="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="请输入密码"
              android:textColor="@color/ffa5a5a5"
              android:textSize="@dimen/sp_15"
              />

          <TextView
              android:id="@+id/login_tv_no_password"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="忘记密码"
              android:textColor="@color/ff00b6ce"
              android:textSize="@dimen/sp_11"
              />
      </RelativeLayout>
      <View
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_marginRight="@dimen/dp_20"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_1"
          android:background="#ffd6d6d6"/>

      <RelativeLayout
          android:layout_marginTop="@dimen/dp_15"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <CheckBox
              android:layout_centerVertical="true"
              android:paddingLeft="@dimen/dp_5"
              style="@style/MyCheckBox"
              android:textColor="@color/ff4e4d4d"
              android:textSize="@dimen/sp_12"
              android:id="@+id/login_cb"
              android:layout_marginLeft="@dimen/dp_20"
              android:text="已阅读并同意"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/login_tv_user_agreement"
              android:padding="@dimen/dp_5"
              android:paddingRight="@dimen/dp_5"
              android:layout_toRightOf="@+id/login_cb"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="《用户服务协议》"
              android:textColor="@color/ff419cdb"
              android:textSize="@dimen/sp_12"
              />
      </RelativeLayout>

  </LinearLayout>
    <Button
        android:id="@+id/login_btn_start"
        android:layout_marginTop="@dimen/dp_424"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:text="登 录"
        android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/login_btn_start"
        android:id="@+id/login_tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建账号"
        android:textColor="@color/ff00b6ce"
        android:textSize="@dimen/sp_14"
        />
    <RelativeLayout
        android:id="@+id/login_rl_fast_login"
        android:layout_below="@+id/login_tv_create_account"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@+id/login_fast_login"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@color/ffd6d6d6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/login_fast_login"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速登陆"
            android:textColor="@color/ffa5a5a5"
            android:textSize="@dimen/sp_16"
            />

        <View
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/login_fast_login"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@color/ffd6d6d6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
    </RelativeLayout>

       <ImageView
           android:layout_marginTop="@dimen/dp_20"
           android:layout_below="@+id/login_rl_fast_login"
           android:layout_centerHorizontal="true"
           android:src="@mipmap/ic_wechat"
           android:id="@+id/login_img"
           android:layout_width="@dimen/dp_52"
           android:layout_height="@dimen/dp_52" />
</RelativeLayout>