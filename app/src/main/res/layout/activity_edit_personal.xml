<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F9FD"
    tools:context=".view.actvity.EditPersonalActivity">
    <RelativeLayout
        android:id="@+id/edit_personal_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/edit_personal_img_back"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_21"
        android:src="@mipmap/ic_left_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/edit_personal_tv_avatar"
        android:layout_marginTop="@dimen/dp_46"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置您的头像"
        android:textColor="@color/ff000000"
        android:textSize="@dimen/sp_17"
        />
      <ImageView
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/edit_personal_tv_avatar"
          android:src="@mipmap/ic_avatar"
          android:layout_width="@dimen/dp_102"
          android:layout_height="@dimen/dp_102" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_white_8"
        android:layout_below="@+id/edit_personal_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置您的昵称"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/edit_personal_img_edit_username"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王晓晓"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_14"
            />
        <ImageView
            android:id="@+id/edit_personal_img_edit_username"
            android:src="@mipmap/ic_edit"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:id="@+id/logon_btn_agree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/btn_login"
        android:text="立即求职"
        android:textColor="@color/white" />
</RelativeLayout>