<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.actvity.ResetPasswordActivity">
    <RelativeLayout
        android:background="@mipmap/ic_login_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_334">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_53"
            android:src="@mipmap/ic_head"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_133"
            android:text="Change password"
            android:textColor="@color/fffefefe"
            android:textSize="@dimen/sp_30" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/reset_psw_img_back"
        android:padding="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_41"
        android:src="@mipmap/ic_left_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_212"
        android:background="@drawable/bg_white_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        android:orientation="vertical">
        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:textColor="@color/ffa5a5a5"
            android:textSize="15sp"
            />

        <View
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffd6d6d6"/>

        <TextView
            android:background="@null"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_14"
            />

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <EditText
                android:inputType="number"
                android:background="@null"
                android:layout_toLeftOf="@+id/reset_psw_tv_mobileCode"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textColor="@color/ffa5a5a5"
                android:textSize="@dimen/sp_15"
                />

            <TextView
                android:id="@+id/reset_psw_tv_mobileCode"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:textColor="@color/ff00b6ce"
                android:textSize="@dimen/sp_11"
                />
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffd6d6d6"/>
        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textColor="@color/ffa5a5a5"
            android:textSize="15sp"
            />

        <View
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffd6d6d6"/>
        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定密码"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:textColor="@color/ffa5a5a5"
            android:textSize="15sp"
            />

        <View
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#ffd6d6d6"/>
    </LinearLayout>
    <Button
        android:id="@+id/reset_psw_btn_start"
        android:layout_marginTop="@dimen/dp_551"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:text="确认修改"
        android:textColor="@color/white"
        android:background="@drawable/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />
</RelativeLayout>