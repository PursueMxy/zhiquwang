<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.HomeFragment">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yyydjk.library.BannerLayout
        android:id="@+id/fm_home_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_249"
        app:autoPlayDuration="5000"
        app:indicatorMargin="@dimen/dp_54"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="5dp"
        app:scrollDuration="1100"
        app:selectedIndicatorColor="@color/fffee35b"
        app:selectedIndicatorHeight="7dp"
        app:selectedIndicatorWidth="7dp"
        app:unSelectedIndicatorColor="@color/white"
        app:unSelectedIndicatorHeight="7dp"
        app:unSelectedIndicatorWidth="7dp" />

    <TextView
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="厦门市"
        android:drawablePadding="@dimen/dp_3"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:drawableRight="@mipmap/ic_bottom_white"
        />
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_82"
        android:background="@drawable/bg_search"
        android:layout_width="@dimen/dp_233"
        android:layout_height="@dimen/dp_31"
        >
        <ImageView
            android:id="@+id/fm_home_img_search"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/fm_home_img_search"
            android:lines="1"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入关键字进行搜索"
            android:textColor="@color/ffb5b5b5"
            android:textSize="14sp"
            />
    </RelativeLayout>
    <ImageView
        android:src="@mipmap/ic_remind"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/fm_home_rl_gridview"
        android:background="@drawable/bg_white_8"
        android:layout_marginTop="@dimen/dp_205"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_107">
        <GridView
            android:id="@+id/fm_home_gridview"
            android:numColumns="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></GridView>
    </RelativeLayout>

    <RadioGroup
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/fm_home_rl_gridview"
        android:background="@color/white"
        android:id="@+id/fm_home_radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RadioButton
            android:id="@+id/fm_home_radiobutton_area"
            android:textColor="@color/ff00b6ce"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/title_choosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="区域"/>

        <RadioButton
            android:id="@+id/fm_home_radiobutton_salary"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/title_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="薪资"/>
        <RadioButton
            android:id="@+id/fm_home_radiobutton_age"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/title_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="年龄"/>

        <RadioButton
            android:id="@+id/fm_home_radiobutton_trade"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/title_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="行业"/>

        <RadioButton
            android:id="@+id/fm_home_radiobutton_work"
            android:textColor="@color/ff4e4d4d"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@drawable/title_nochoosed_color"
            android:button="@null"
            android:gravity="center"
            android:text="工作环境"/>

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/fm_home_rl_todayHeat"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/fm_home_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fm_home_tv_today_heat"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日热招"
            android:textColor="#ff28292d"
            android:textSize="@dimen/sp_19"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fm_home_tv_today_heat"
            android:id="@+id/fm_home_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_17">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <com.zhouyou.recyclerview.XRecyclerView
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/fm_home_content_xRecyclerView"
        android:layout_below="@+id/fm_home_rl_todayHeat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.zhouyou.recyclerview.XRecyclerView>
</RelativeLayout>

</FrameLayout>